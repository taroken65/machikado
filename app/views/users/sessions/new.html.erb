<div class="container mt-5">
<h2 class="topic mb-3">ユーザーログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :パスワード %><br />
    <%= f.password_field :password, autocomplete: "current-password",class: 'form-control' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-group">
      <%= f.check_box :remember_me %>
      <%= f.label :メールアドレスとパスワードを保存する %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン",class:"btn btn-secondary" %>
  </div>
<% end %>

  <div class="mt-5">
    <span class="bg-light">※会員登録がお済みでない方</span>
  </div>

  <div class="mt-3 mb-4">
    <%= link_to "こちら", new_user_registration_path, class: "signup-link" %>から新規登録を行ってください。
  </div>

</div>
