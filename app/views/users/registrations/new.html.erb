<div class="container mt-5">
  <h2 class="topic mb-3">新規ユーザー登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :ニックネーム %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "ニックネーム",class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password",class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :パスワード（確認） %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password",class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit "登録",class:"btn btn-secondary" %>
  </div>
<% end %>

<div class="mt-5">
  <span class="bg-light">※既に登録済の方</span>
</div>

<div class="mt-3 mb-4">
 <%= link_to "こちら", new_user_session_path, class: "signin-link" %>からログインしてください。
</div>



</div>