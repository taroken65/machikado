<div class="container mt-5">
<h2>ユーザー一覧</h2>
  <table class="table">
     <thead>
      <tr>
       <th>No.</th>
       <th>登録日</th>
       <th>ニックネーム</th>
       <th>メールアドレス</th>
       <th>トピック数</th>
       <th>コメント数</th>
       <th>ステータス</th>
      </tr>
      </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= user.created_at.strftime('%Y/%m/%d') %></td>
      <td><%= link_to admin_user_path(user) do %>
          <%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: "50x50", class:"rounded-circle") %><br>
          <%= user.name %><% end %></td>
      <td><%= user.email %></td>
      <td><%= "#{user.topics.count} 件" %></td>
      <td><%= "#{user.comments.count} 件" %></td>
      <td><% if user.is_deleted == true %>
          <p class = "text-secondary">退会</p>
          <% else %>
          <p class = "text-success">有効</p>
          <% end %></td>
    </tr>
  </tbody><% end %>
  </table>
</div>
