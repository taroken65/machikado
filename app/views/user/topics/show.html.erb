<div class="container mt-5">
  <h2 class="border-bottom topic">トピック詳細</h2>
    <% if current_user == @topic.user %>
    <div class="text-right">
      <%= link_to "削除する", topic_path(@topic), method: :delete, class:"btn btn-danger",data: { confirm: '本当に消しますか？' } %>
    </div><% end %>
     <span class="category mt-3"><%= @topic.category.name %></span>
       <span class="age"><%= @topic.age.name %></span>
        <h3 class="title mt-3"><%= @topic.title %></h3>
         <p><%= @topic.body %></p>
          <% if user_signed_in? %>
           <% if @topic.favorited_by?(current_user) %>
           <%= link_to @topic.favorites.count, topic_favorites_path(@topic), method: :delete, local: true, class: "fas fa-heart heart_red" %>
           <% else %>
           <%= link_to @topic.favorites.count, topic_favorites_path(@topic), method: :post, local: true, class: "fas fa-heart heart_blue" %>
           <% end %>
           <% @topic.favorites.each do |favorite| %>
           <%= link_to user_path(favorite.user) do %><%= attachment_image_tag(favorite.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: "30x30", class:"rounded-circle") %>
           <% end %>
           <% end %>
          <% else %>
           いいね数：<%= @topic.favorites.count %>
          <% end %>
          <p class='text-right'>
           <%= link_to user_path(@topic.user) do %>
           <%= attachment_image_tag(@topic.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: "50x50", class:"rounded-circle") %>
           <%= @topic.user.name %>
           <% end %>
           <%= @topic.created_at.strftime('%Y/%m/%d') %>
          </p>

  <h2 class="topic mt-5">コメント</h2>
    <table class="table table-borderless">
     <thead>
      <tr>
       <th></th>
       <th></th>
       <th></th>
       <th></th>
      </tr>
     </thead>
     <tbody>
      <% @topic.comments.each do |comment| %>
      <tr>
       <td><%= link_to user_path(comment.user) do %>
          <%= attachment_image_tag(comment.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: "50x50", class:"rounded-circle") %>
          <%= comment.user.name %><% end %></td>
       <td><%= comment.comment %></td>
       <td> <%= comment.created_at.strftime('%Y/%m/%d') %></td>
       <td><% if comment.user == current_user %>
           <%= link_to "削除", topic_comment_path(comment.topic, comment), method: :delete, class:"btn btn-danger" %>
           <% end %></td>
      </tr>
      </tbody><% end %>
    </table>

  <h2 class="topic mt-5">コメント投稿</h2>
   <div class="mt-3">
    <%= form_with(model:[@topic, @comment], local: true) do |f| %>
    <%= f.text_area :comment, :size=>"100%",placeholder: "コメントをここに" %>
    <%= f.submit "投稿する" %>
    <% end %>
   </div>

</div>
