<h2>トピック一覧</h2>
  <table class="table">
     <thead>
      <tr>
       <th>No.</th>
       <th>投稿者</th>
       <th>タイトル</th>
       <th>本文</th>
       <th>年齢別</th>
       <th>カテゴリー</th>
       <th>コメント数</th>
      </tr>
      </thead>
  <tbody>
    <% @topics.each do |topic| %>
    <tr>
      <td><%= topic.id %></td>
      <td><%= attachment_image_tag(topic.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: "50x50") %>
          <%= topic.user.name %></td>
      <td><%= link_to topic_path(topic) do %>
          <%= topic.title %>
          <% end %></td>
      <td><%= topic.body %></td>
      <td><%= topic.age.name %></td>
      <td><%= topic.category.name %></td>
      <td><%= link_to "#{topic.comments.count} 件", topic_path(topic) %></td>
    </tr>
  </tbody><% end %>
  </table>
