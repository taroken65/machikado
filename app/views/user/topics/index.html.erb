<div class="container mt-5">
<h2 class="topic">トピック一覧</h2>
 <div class="text-right">
  <%= link_to "トピック作成", new_topic_path, class:"btn btn-outline-success" %>
 </div>
  <table class="table mt-3">
     <thead>
      <tr>
       <th>No.</th>
       <th>投稿者</th>
       <th>投稿日</th>
       <th>タイトル</th>
       <th>本文</th>
       <th>年齢別</th>
       <th>カテゴリー</th>
       <th>コメント数</th>
       <th>いいね数</th>
      </tr>
      </thead>
  <tbody>
    <% @topics.each do |topic| %>
    <tr>
      <td><%= topic.id %></td>
      <td><%= link_to user_path(topic.user) do %>
          <%= attachment_image_tag(topic.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: "50x50", class:"rounded-circle") %><br>
          <%= topic.user.name %>
          <% end %></td>
      <td><%= topic.created_at.strftime('%Y/%m/%d') %></td>
      <td><%= link_to topic_path(topic) do %>
          <%= topic.title %>
          <% end %></td>
      <td><%= topic.body %></td>
      <td><%= link_to topic_age_path(topic.age) do %>
          <%= topic.age.name %>
          <% end %></td>
      <td><%= link_to topic_category_path(topic.category) do %>
          <%= topic.category.name %>
          <% end %></td>
      <td><%= "#{topic.comments.count} 件" %></td>
      <td><%= topic.favorites.count %></td>
    </tr>
  </tbody><% end %>
  </table>
</div>