<div class="container mt-5">
<h2 class="topic">トピック投稿内容</h2>
<%= form_with model: @topic, url:topics_path, local:true do |f| %>

  <div class="form-group mt-3">
    <%= f.text_field :title, :size=>"100%",:placeholder => "タイトルを入力してください。", class: 'form-control' %>
  </div>

  <div class="form-group mt-3">
  <%= f.text_area :body, :size=>"100%",:placeholder => "内容を入力してください。", class: 'form-control' %>
  </div>

  <div class="form-group mt-3">
    <h4>子どもの年齢    <%= f.collection_select :age_id, Age.all, :id, :name %></h4>
  </div>

  <div class="form-group mt-3">
    <h4>カテゴリー <%= f.collection_select :category_id, Category.all, :id, :name %></h4>
  </div><br>

  <div class="form-group">
    <%= f.submit '投稿',class:"btn btn-success" %>
  </div>

<% end %>
</div>