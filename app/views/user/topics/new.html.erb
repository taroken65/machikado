<div class="container mt-5">
  <div class="text-left mb-3">
    <% if @topic.errors.any? %>
      <%= @topic.errors.count %> 箇所エラーとなっています。:<br>
      <% @topic.errors.full_messages.each do |message| %>
      <%= message %><br>
      <% end %>
    <% end %>
  </div>
 <h2 class="topic">トピック投稿内容</h2>

  <div class="text-right">
   <%= link_to "トピック一覧", topics_path, class:"btn btn-outline-success" %>
  </div>
   <%= form_with model: @topic, url:topics_path, local:true do |f| %>

    <div class="form-group mt-3">
     <%= f.text_field :title, :size=>"100%",:placeholder => "タイトルを入力してください。", class: 'form-control' %>
    </div>

    <div class="form-group mt-3">
     <%= f.text_area :body, :size=>"100%",:placeholder => "内容を入力してください。", class: 'form-control' %>
    </div>

    <div class="form-group mt-3">
     <h4>子どもの年齢  <span class="small"><%= f.collection_select :age_id, Age.all, :id, :name %></span></h4>
    </div>

    <div class="form-group mt-3">
     <h4>カテゴリー <span class="small"><%= f.collection_select :category_id, Category.all, :id, :name %></span></h4>
    </div><br>

    <div class="form-group">
     <%= f.submit '投稿',class:"btn btn-success" %>
    </div>

 <% end %>
</div>