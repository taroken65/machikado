<div class="container mt-5">
<h2>トピック投稿内容</h2>
<%= form_with model: @topic, url:topics_path, local:true do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title, :size=>"100%" %>
  <h4>本文</h4>
  <%= f.text_area :body, :size=>"100%" %>
  <h4>子どもの年齢</h4>
  <%= f.collection_select :age_id, Age.all, :id, :name %>
  <h4>カテゴリー</h4>
  <%= f.collection_select :category_id, Category.all, :id, :name %>
  <%= f.submit '投稿' %>
<% end %>
</div>