<div class="container mt-5">
 <h2 class="topic">カテゴリー：<%= @category.name %> <span class="small">(全<%= @topics.count %>件)</span></h2>
    <% @topics.each do |topic| %>
     <div class="border-top">
      <span class="age mt-2 mb-1">
              <%= link_to topic_age_path(topic.age) do %>
              <%= topic.age.name %><% end %>
      </span><br>
      <p>
        <%= link_to topic_path(topic) do %>
        <%= topic.title %>
        <% end %>
      </p>
      <p><%= topic.body %></p>
      <p>いいね数：<%= topic.favorites.count %>, コメント数：<%= topic.comments.count %></p>
      <p class='text-right'>
        <%= link_to user_path(topic.user) do %>
        <%= attachment_image_tag(topic.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: "30x30", class:"rounded-circle") %>
        <%= topic.user.name %>
        <% end %>
        <%= topic.created_at.strftime('%Y/%m/%d') %>
        <% if current_user == topic.user %>
        <%= link_to "削除", topic_path(topic), method: :delete, class:"btn btn-danger",data: { confirm: '本当に消しますか？'} %>
        <% end %>
       </p>
      </div>
     <% end %>

</div>