<% if topic.favorited_by?(current_user) %>
 <%= link_to topic.favorites.count, topic_favorites_path(topic), method: :delete, remote: true, class: "fas fa-heart heart_red" %>
<% else %>
 <%= link_to topic.favorites.count, topic_favorites_path(topic), method: :post, remote: true, class: "fas fa-heart heart_blue" %>
<% end %>

<% topic.favorites.each do |favorite| %>
 <%= link_to user_path(favorite.user) do %>
 <%= attachment_image_tag(favorite.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: "30x30", class:"rounded-circle") %>
 <% end %>
<% end %>