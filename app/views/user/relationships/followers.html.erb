<div class="container mt-5">
  <h3 class="topic">フォロワー一覧 <span class="small">(<%= @users.count %>人)</span></h3>
　　<% if @users.exists? %>
　　  <% @users.each do |user| %>
      <div class="border-top">
        <p class="my-2">
         <%= link_to user_path(user) do %>
         <%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: "50x50", class:"rounded-circle") %>
         <%= user.name %>
         <% end %>
          <% if current_user != user %>
           <% if current_user.following?(user) %>
            <div class="text-right">
             <%= link_to "フォロー中", user_relationships_path(user.id), method: :delete, class: "btn btn-success" %>
            </div>
           <% else %>
            <div class="text-right">
             <%= link_to "フォロー", user_relationships_path(user.id), method: :post, class: "btn btn-outline-success" %>
            </div>
          <% end %>
         <% end %>
        </p>
        </div>
      <% end %>
    <% else %>
     <p>フォロワーはいません</p>
    <% end %>
</div>
