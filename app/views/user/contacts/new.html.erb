<div class="container mt-5">
 <h3 class="topic mb-3">お問い合わせ内容入力</h3>
  <%= form_with model:@contact, url:confirm_path, local:true do |f| %>
   <div class="form-group">
    <%= f.label :name, 'お名前*' %>
    <%= f.text_field :name, autofocus: true, class: 'form-control' %>
   </div>

   <div class="form-group">
    <%= f.label :email, 'メールアドレス*' %>
    <%= f.text_field :email, autofocus: true, class: 'form-control' %>
   </div>

   <div class="form-group">
    <%= f.label :subject, 'タイトル*' %>
    <%= f.text_area :subject, class: 'form-control' %>
   </div>

   <div class="form-group">
    <%= f.label :message, 'メッセージ*' %>
    <%= f.text_area :message, size: '10x5', class: 'form-control' %>
   </div>

   <div>
    <%= f.submit '入力内容確認', class:"btn btn-success mb-3" %>
  </div>
 <% end %>
</div>