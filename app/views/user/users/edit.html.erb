<div class="container mt-5">
  <h2 class="topic">マイページ編集</h2>
  <%= form_with model: @user, url:user_path,local:true do |f| %>

  <div class="field mt-3">
    <h4>プロフィール画像</h4>
    <%= f.attachment_field :profile_image %>
  </div>

  <div class="field mt-3">
    <h4>ニックネーム</h4>
    <%= f.text_field :name %>
  </div>

  <div class="field mt-3">
    <h4>メールアドレス</h4>
    <%= f.email_field :email %>
  </div>

  <div class="mt-3">
    <%= f.submit '編集' %>
  </div>

  <% end %>
</div>