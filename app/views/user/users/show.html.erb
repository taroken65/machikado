      <td><%= attachment_image_tag(@user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", size: "100x100") %></td>
    </tr>
    <tr>
      <th>ニックネーム</th>
      <td><%= @user.name %></td>
